<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:background="@drawable/rounded_corner_thin">

		<!-- USER TEXT INFO -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<View
				class="org.stackdroid.utils.TextViewWithView"
				android:layout_width="224dp"
				android:layout_height="40dp"
				android:text="User: "
				android:id="@+id/userName" />

			<View
				class="org.stackdroid.utils.TextViewWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Project: "
				android:id="@+id/tenantName" />

			<View
				class="org.stackdroid.utils.TextViewWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Endpoint: "
				android:id="@+id/endpointName" />

			<View
				class="org.stackdroid.utils.TextViewWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SSL: "
				android:id="@+id/SSL" />

			<View
				class="org.stackdroid.utils.TextViewWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Verify server's certificate: "
				android:id="@+id/verifyServerCert" />
		</LinearLayout>

		<!-- BUTTONS -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<View
				class="org.stackdroid.utils.ImageButtonWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/infoButton" />

			<View
				class="org.stackdroid.utils.ImageButtonWithView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"

				android:id="@+id/deleteButton" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_weight="15"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<View
            android:layout_width="10sp"
            android:layout_height="10sp" />

	</LinearLayout>


</LinearLayout>
