<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="6"
        android:layout_gravity="left">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+string/IMAGENAME"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="14sp"
            android:typeface="sans"
            android:paddingLeft="3dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/imageName"
            android:textStyle="italic"
            android:textSize="14sp"
            android:typeface="sans"
            android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/STATUS"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageStatus"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/SIZE"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageSize"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/PUBLIC"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imagePublic"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/FORMAT"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageFormat"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageID"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/MINDISK"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageMinDisk"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/MINRAM"
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/imageMinRAM"
                android:textStyle="italic"
                android:textSize="14sp"
                android:typeface="sans"
                android:paddingLeft="12dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FF909090" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/buttonOk"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    </LinearLayout>

</LinearLayout>
