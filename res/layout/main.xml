<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainRootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
  
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/buttonlayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
		
                android:layout_height="wrap_content">
    <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 

    <Button
        android:id="@+id/LOGIN"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/USERS"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
	android:textSize="18dp"
	android:drawableLeft="@drawable/users"
        android:onClick="login"/>
    <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 
    <Button
        android:id="@+id/OVERVIEW"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/OVERVIEW"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
	android:textSize="18dp"
	android:drawableLeft="@drawable/overview"
        android:onClick="overview"/>
    <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 
  </LinearLayout>

  <LinearLayout 
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/buttonlayout2"
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 
    <Button
        android:id="@+id/GLANCE"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/IMAGES"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:onClick="glance"
	android:textSize="18dp"
	
	android:drawableLeft="@drawable/openstack"/>
        <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 
    <Button
        android:id="@+id/NOVA"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/INSTANCES"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
	android:textSize="18dp"
	android:drawableLeft="@drawable/terminal"
        android:onClick="nova"/>
    <View   
	android:layout_width="4px"
	android:layout_height="90dp"/> 
  </LinearLayout>  
</LinearLayout>

