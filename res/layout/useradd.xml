<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
      <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
        <View
          android:layout_width="match_parent"
          android:layout_height="3sp"
        />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/ONLYHOSTNAME"
		android:textSize="14sp"
		android:textStyle="bold"
                android:paddingLeft="4dp"
		android:ems="10" />
		
        <EditText
                    android:id="@+id/endpointET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
		    android:textSize="14sp"
		    android:inputType="textNoSuggestions"
                    android:ems="10" >
          <requestFocus />
        </EditText>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/TENANTNAME"
		android:textStyle="bold"
		android:textSize="14sp"
                android:paddingLeft="4dp"
		android:ems="10" />
		
        <EditText
                    android:id="@+id/tenantnameET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
		    android:textSize="14sp"
		    android:inputType="textNoSuggestions"
                    android:ems="10" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Username:"
		android:textStyle="bold"
		android:textSize="14sp"
                android:paddingLeft="4dp"
		android:ems="10" />	    
        <EditText
                    android:id="@+id/usernameET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
		    android:textSize="14sp"
		    android:inputType="textNoSuggestions"
                    android:ems="10" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Password:"
		android:textStyle="bold"
		android:textSize="14sp"
        android:paddingLeft="4dp"
		android:ems="10" />
	    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
        <EditText
                    android:id="@+id/passwordET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
		    		android:textSize="14sp"
                    android:text=""
                    android:layout_weight="1"
                    android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkBoxPWD"
            android:onClick="showPWD"
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/SHOWPWD" />

        </LinearLayout>
        <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
          <CheckBox
                        android:id="@+id/usesslCB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
			android:textSize="14sp"
                        android:text="@string/USESSL" />
          <CheckBox
                        android:id="@+id/insecureCB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
			android:textSize="14sp"
			android:onClick="toggleSelectCA"
                        android:text="@string/INSECURE" />
        </LinearLayout>
       <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
          <Button
                        android:id="@+id/selectCABT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
			android:textSize="14sp"
			android:onClick="selectCA"
                        android:text="@string/SELECTCA" />
        </LinearLayout>
        <View
          android:layout_width="match_parent"
          android:layout_height="3sp"
        />
        <View
          android:layout_width="match_parent"
          android:layout_height="2sp"
          android:background="#FF909090"
        />
        <View
          android:layout_width="match_parent"
          android:layout_height="3sp"
        />
        <LinearLayout
   	  android:layout_width="fill_parent"
    	  android:layout_height="wrap_content"
   	  android:layout_gravity="center_horizontal"
  	  android:gravity="center_horizontal" >
          
	  <Button
   	    android:id="@+id/secg_but"
   	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
   	    android:layout_gravity="center_horizontal"
   	    android:fadingEdge="horizontal"
  	    android:shadowDx="3"
     	    android:shadowDy="3"
     	    android:shadowRadius="3"
	    android:textSize="14sp"
     	    android:text="@string/ADD"
	    android:onClick="add" />
	              
	  <Button
   	    android:id="@+id/button2"
   	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
   	    android:layout_gravity="center_horizontal"
   	    android:fadingEdge="horizontal"
  	    android:shadowDx="3"
     	    android:shadowDy="3"
     	    android:shadowRadius="3"
     	    android:text="@string/RESETFIELDS"
	    android:textSize="14sp"
	    android:onClick="reset" />
        </LinearLayout></LinearLayout>
      </ScrollView>
    </LinearLayout></LinearLayout>
