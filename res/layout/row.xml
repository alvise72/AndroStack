<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent" android:text="Photoset name"
		android:layout_height="wrap_content" android:id="@+id/setname"
		android:textSize="14sp" />
	<EditText android:layout_width="fill_parent" android:text="Relative path"
		android:layout_height="wrap_content" android:id="@+id/relativepath"
		android:textSize="22sp" android:layout_below="@id/setname"
		android:layout_alignParentBottom="true" />
</RelativeLayout>
