<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.openstack"
      android:versionCode="1"
      android:versionName="1.0.0">

    <uses-sdk android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.SET_ORIENTATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.android.vending.CHECK_LICENSE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>

    <supports-screens android:resizeable="true"
                      android:smallScreens="true" 
                      android:normalScreens="true" 
                      android:largeScreens="true" 
                      android:anyDensity="true" />

    <application android:label="DroidStack" android:icon="@drawable/openstack">

        <activity android:launchMode="singleInstance" android:name="MainActivity"
                  android:label="DroidStack"
		  android:icon="@drawable/openstack" android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

	<activity 
	    android:name="org.openstack.activities.CAFileExploreActivity"
	    android:launchMode="singleInstance"
	    android:label="Select CA File"
	   />

	<activity
	    android:name="org.openstack.activities.UsersActivity" 
	    android:launchMode="singleInstance" 
	    android:label="Select OpenStack user" 
	  />

	<activity 
	    android:name="org.openstack.activities.OSImagesActivity" 
	    android:launchMode="singleInstance" 
	    android:label="Manage Glance Images" 
	    android:screenOrientation="portrait"
	    android:configChanges="keyboardHidden|orientation"
	   />

        <activity
            android:name="org.openstack.activities.OverViewActivity" 
            android:launchMode="singleInstance" 
            android:label="Usage Overview"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
           />

        <activity
            android:name="org.openstack.activities.UserAddActivity" 
            android:launchMode="singleInstance" 
            android:label="Add new User"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
           />

       <activity
            android:name="org.openstack.activities.ServersActivity" 
            android:launchMode="singleInstance" 
            android:label="Manage Nova Instances"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
           />

       <activity
            android:name="org.openstack.activities.ImageLaunchActivity"
            android:launchMode="singleInstance"
            android:label="Manage Nova Instances"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
           />
    </application>
</manifest> 
